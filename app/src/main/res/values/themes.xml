<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.Theme.PlantPulse" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Gaya dasar untuk semua teks -->
    <style name="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Gaya dasar untuk Regular -->
    <style name="BaseTextStyle.Regular" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/orkney_regular</item>
    </style>

    <!-- Gaya dasar untuk Medium -->
    <style name="BaseTextStyle.Medium" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/orkney_medium</item>
    </style>

    <!-- Gaya dasar untuk Bold -->
    <style name="BaseTextStyle.Bold" parent="BaseTextStyle">
        <item name="android:fontFamily">@font/orkney_bold</item>
    </style>

    <!-- Gaya teks untuk Regular -->
    <style name="TextStyle.Regular.ExtraSmall.Black" parent="BaseTextStyle.Regular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle.Regular.ExtraSmall.DarkGray" parent="BaseTextStyle.Regular">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/darkGray</item>
